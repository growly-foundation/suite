{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@chainsmith-adapters": ["../../packages/core/src/adapters/index.ts"],
      "@chainsmith-data": ["../../packages/core/src/data/index.ts"],
      "@chainsmith-sdk": ["../../packages/core/src/index.ts"],
      "@chainsmith-types": ["../../packages/core/src/types/index.ts"]
    },
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "resolveJsonModule": true,
    "declaration": true,

    /* Linting */
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../packages/core"
    }
  ]
}
