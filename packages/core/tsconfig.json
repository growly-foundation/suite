{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2021",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "es2020",
    "composite": true
  },
  "include": ["**/*.ts", "**/*.json"]
}
