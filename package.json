{
  "name": "chainsmith",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --debug --fix '**/*.{js,jsx,ts,tsx}'",
    "format": "bunx prettier --config .prettierrc.cjs '**/*.{js,jsx,ts,tsx}' --write",
    "start:app": "cd packages/app && bun dev",
    "start:agent": "cd packages/eliza-agent && bun start"
  },
  "precommit.silent": true,
  "pre-commit": [
    "format"
  ],
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "eslint": "^8.0.0",
    "moment": "^2.29.4",
    "prettier": "^3.4.2",
    "react-icons": "^4.10.1",
    "tsyringe": "^4.8.0",
    "typescript": "~5.6.2"
  },
  "devDependencies": {
    "@parcel/transformer-typescript-types": "^2.8.3",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint-config-react-app": "^7.0.1",
    "pre-commit": "^1.2.2",
    "ts-node": "^10.9.2",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.2"
  }
}
