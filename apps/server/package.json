{
  "name": "@chainsmith/server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --build",
    "start:prod": "node -r ts-node/register -r tsconfig-paths/register dist/main.js",
    "start:script": "ts-node-esm --experimental-specifier-resolution=node -r dotenv/config ./src/_scripts/index.ts",
    "start": "ts-node-esm --experimental-specifier-resolution=node -r dotenv/config src/main.ts",
    "dev": "nodemon --exec node --experimental-specifier-resolution=node --loader ts-node/esm -r dotenv/config src/server.ts",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build:docker": "docker buildx build --platform linux/amd64 -t chainsmith-prod:amd64 .",
    "format": "npm run lint:fix & npm run prettier:fix",
    "check": "npm run lint & npm run prettier:check",
    "lint": "npx eslint --debug '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "npx eslint --fix '**/*.{js, jsx, ts, tsx}'",
    "prettier:fix": "prettier --config .prettierrc.js '**/*.{js,jsx,ts,tsx}' --write",
    "prettier:check": "prettier --config .prettierrc.js '**/*.{js,jsx,ts,tsx}' --check",
    "script:export": "ts-node ./src/migrations/export-csv.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "@nestjs/apollo": "^11.0.5",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^11.0.5",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/throttler": "^4.1.0",
    "apollo-server-core": "^3.12.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "cheerio": "^1.0.0-rc.12",
    "class-validator": "^0.14.0",
    "crypto-js": "^4.1.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^14.0.0",
    "moment": "^2.29.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "slugify": "^1.6.6",
    "uuid": "^9.0.0",
    "webextension-polyfill": "^0.10.0"
  },
  "resolutions": {
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/graphql-upload": "^16.0.0",
    "@types/jest": "28.1.8",
    "@types/lodash": "^4.14.194",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "~5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=18.0.0 <20.0.0"
  }
}
