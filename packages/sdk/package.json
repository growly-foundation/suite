{
  "name": "@growly/sdk",
  "version": "0.1.0",
  "type": "module",
  "repository": "https://github.com/growly-official/appstack.git",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm clean && pnpm bundle:prod",
    "dev": "concurrently \"pnpm bundle:dev\"",
    "bundle:dev": "NODE_ENV=development vite build --watch",
    "bundle:prod": "vite build",
    "clean": "rm -rf dist esm",
    "format": "prettier --write .",
    "gen:db": "npx supabase gen types typescript --project-id $PROJECT_ID --schema public > src/database.types.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "glob": "^11.0.2",
    "rimraf": "^5.0.10",
    "rollup-plugin-preserve-use-client": "^3.0.1",
    "tsup": "^8.4.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-externalize-deps": "^0.9.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "packageManager": "pnpm@10.6.3",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "uuid": "^11.1.0"
  }
}
